<script>
const genres = ["Fantasia", "Romance", "Ficção", "Guerra"];
const titles = [
  "Corte de Espinhos e Rosas", "A Canção de Aquiles", "O Nome do Vento",
  "Sombra e Ossos", "A Filha do Guardião do Fogo", "O Príncipe Cruel",
  "Trono de Vidro", "Coração de Tinta", "O Poder da Esperança", 
  "O Império das Tormentas", "Rainha Vermelha", "O Feiticeiro de Terramar"
];
const images = [
  "https://m.media-amazon.com/images/I/81eM2u8s6XL.jpg",
  "https://m.media-amazon.com/images/I/81h2gWPTYJL.jpg",
  "https://m.media-amazon.com/images/I/91bYsX41DVL.jpg",
  "https://m.media-amazon.com/images/I/81Wc4lAfLxL.jpg",
  "https://m.media-amazon.com/images/I/71wY3X5tTjL.jpg",
  "https://m.media-amazon.com/images/I/81VStYnDGrL.jpg"
];

function randomItem(arr) {
  return arr[Math.floor(Math.random() * arr.length)];
}

function createBookCard(id) {
  const title = randomItem(titles);
  const genre = randomItem(genres);
  const img = randomItem(images);
  const price = (Math.random() * (80 - 30) + 30).toFixed(2);

  return `
  <div class="book-card">
    <img src="${img}" alt="${title}">
    <div class="book-content">
      <div class="section-title">resumo</div>
      <p>${title} mistura elementos de ${genre.toLowerCase()} com emoções profundas, explorando temas de amor, coragem e destino.</p>
      <div class="section-title">faixa etária de idade</div>
      <p>Recomendado para público +14. Ideal para adolescentes e jovens adultos.</p>
      <div class="section-title">preço de mercado</div>
      <p>Disponível a partir de <strong>R$ ${price}</strong> nas principais lojas online.</p>
    </div>
  </div>
  `;
}

const container = document.getElementById("bookContainer");
let html = "";
for (let i = 1; i <= 5000; i++) {
  html += createBookCard(i);
}
container.innerHTML = html;
</script>

</body>
</html>
